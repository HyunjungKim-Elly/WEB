{{#each department}}
<div class="row">
    <div class="col-md-12">
        <h2>{{departmentName}} - Department: {{departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">
            <fieldset>
                <input type="hidden" name="departmentId" value="{{departmentId}}">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="DepartmentName">Department Name</label>
                            <input class="form-control" id="firstName" name="departmentName" type="text" value="{{departmentName}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" />
            <br /><br /><br />
        </form>
    </div>
</div>
{{/each}}